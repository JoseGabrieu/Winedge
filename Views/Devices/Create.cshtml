@model Winedge.Models.Device

@{
    ViewData["Title"] = "Cadastrar Dispositivo";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

<div class="row">
    <div class="col-lg-6 col-md-8 mx-auto">

        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-plus-square"></i> @ViewData["Title"]
                </h4>
            </div>

            <form asp-action="Create" method="post">
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="DeviceName" class="control-label">Dispositivo</label>
                        <input asp-for="DeviceName" class="form-control" />
                        <span asp-validation-for="DeviceName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="control-label">Localização</label>
                        <p class="form-text text-muted mt-0 mb-2">Clique no mapa para definir a localização do dispositivo.</p>
                        <div id="createMap" style="height: 300px; width: 100%; border-radius: 10px; border: 1px solid #ddd;"></div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Latitude" class="control-label">Latitude</label>
                            <input asp-for="Latitude" class="form-control" readonly />
                            <span asp-validation-for="Latitude" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Longitude" class="control-label">Longitude</label>
                            <input asp-for="Longitude" class="form-control" readonly />
                            <span asp-validation-for="Longitude" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success ms-2">
                        <i class="bi bi-check-lg"></i> Salvar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const latInput = document.getElementById("Latitude");
            const lngInput = document.getElementById("Longitude");

            const initialLat = -23.5505;
            const initialLng = -46.6333;
            const initialZoom = 10;

            const map = L.map('createMap').setView([initialLat, initialLng], initialZoom);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '© OpenStreetMap'
            }).addTo(map);

            let marker = null;

            function updateInputs(coords) {
                latInput.value = coords.lat.toFixed(7);
                lngInput.value = coords.lng.toFixed(7);
            }

            map.on('click', function(e) {
                const coords = e.latlng;

                if (marker === null) {
                    marker = L.marker(coords, {
                        draggable: true
                    }).addTo(map);

                    marker.on('dragend', function () {
                        updateInputs(marker.getLatLng());
                    });

                } else {
                    marker.setLatLng(coords);
                }

                updateInputs(coords);
            });

        });
    </script>
}