@model Winedge.Models.UserDevice

@{
    ViewData["Title"] = "Excluir Dispositivo";
}

<div class="row">
    <div class="col-lg-6 col-md-8 mx-auto">

        <div class="card border-danger shadow-sm">

            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle-fill"></i> @ViewData["Title"]
                </h4>
            </div>

            <div class="card-body">
                <h5 class="card-title text-danger">Tem certeza que deseja excluir este dispositivo?</h5>
                <p class="text-muted">Esta ação não pode ser desfeita. O item será removido permanentemente.</p>

                <hr />

                <dl class="row">
                    <dt class="col-sm-3">Usuário</dt>
                    <dd class="col-sm-9">@Model.User</dd>

                    <dt class="col-sm-3">Dispositivo</dt>
                    <dd class="col-sm-9">@Model.Device</dd>
                </dl>
            </div>

            <div class="card-footer text-end">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger ms-2">
                        <i class="bi bi-trash3-fill"></i> Sim, Excluir
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>