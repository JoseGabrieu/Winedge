@model IEnumerable<Winedge.Models.UserDevice>

@{
    ViewData["Title"] = "Dispositivos Cadastrados";
}

<div class="card shadow-sm">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-dark">
                <i class="bi bi-cpu"></i> @ViewData["Title"]
            </h4>

            @if (User.IsInRole("admin"))
            {
                <a class="btn btn-primary" asp-action="Create">
                    <i class="bi bi-plus-lg"></i> Cadastrar Novo
                </a>
            }
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-light">
                <tr>
                    @if (User.IsInRole("admin"))
                    {
                        <th scope="col">ID</th>
                        <th scope="col">Usuário</th>
                    }
                    <th scope="col">Dispositivo</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @if (User.IsInRole("admin"))
                        {
                            <td class="align-middle">@item.Id</td>
                            <td class="align-middle">@item.User</td>
                        }
                        <td class="align-middle">@item.Device</td>

                        <td class="text-center align-middle">
                            <div class="btn-group btn-group-sm" role="group" aria-label="Ações do Item">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detalhes">
                                    Detalhes<i class="bi bi-eye-fill"></i>
                                </a>
                                @if (User.IsInRole("admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Editar">
                                        Editar<i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Excluir">
                                        Excluir<i class="bi bi-trash3-fill"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>